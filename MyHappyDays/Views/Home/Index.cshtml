@model IEnumerable<MyHappyDays.ViewModels.TopStatisticsData>
@{
    ViewBag.Title = "Top Activity for Each Age Group";
}
<h3>@ViewBag.Title.</h3>

<table>
    <tr>
        <th>
            Age Group
        </th>
        <th></th>
        <th>
           Activity
        </th>
        <th></th>
        <th>
            Activity Count
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AgeGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activity.NameOfActivity)
            </td>
            <td>
                @item.ActivityCount
            </td>
        </tr>
    }
</table>
