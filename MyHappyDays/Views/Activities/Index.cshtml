            @Html.DisplayFor(modelItem => item.NameOfActivity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxCapacity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AgeGroup)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ActivityType)
        </td>
